{% for Matrix in types.implementing.MatrixProtocol|struct %}
// sourcery:file:Generated/Conditional{{ Matrix.name }}Tests
import XCTest

@testable import Keanu

// Matrix type: {{ Matrix.name }}
final class Conditional{{ Matrix.name }}Tests: XCTestCase {
    typealias Element = Int

    func testIsEmpty1D() {
        let m = [] as {{ Matrix.name }}<Element>
        XCTAssert(m.isEmpty)
    }

    func testIsEmpty2D() {
        let m = [[]] as {{ Matrix.name }}<Element>
        XCTAssert(m.isEmpty)
    }

    func testIsNotEmpty() {
        let m = [[1]] as {{ Matrix.name }}<Element>
        XCTAssertFalse(m.isEmpty)
    }

    func testIsEmptySquare() {
        let m = [[]] as {{ Matrix.name }}<Element>
        XCTAssert(m.isSquare)
    }

    func testIsSquare() {
        let m = [[1, 2], [3, 4]] as {{ Matrix.name }}<Element>
        XCTAssert(m.isSquare)
    }

    func testIsNotSquare() {
        let m = [[1], [2]] as {{ Matrix.name }}<Element>
        XCTAssertFalse(m.isSquare)
    }

    func testIsRowVector() {
        let m = [[1, 2, 3]] as {{ Matrix.name }}<Element>
        XCTAssert(m.isVector)
        XCTAssertEqual(m.vector, [1, 2, 3] as [Element])
    }

    func testIsColumnVector() {
        let m = [[1], [2], [3]] as {{ Matrix.name }}<Element>
        XCTAssert(m.isVector)
        XCTAssertEqual(m.vector, [1, 2, 3] as [Element])
    }

    func testIsNotVector() {
        let m = [[1, 2], [3, 4]] as {{ Matrix.name }}<Element>
        XCTAssertFalse(m.isVector)
        XCTAssertNil(m.vector)
    }

    func testIsScalar() {
        let m = [[1]] as {{ Matrix.name }}<Element>
        XCTAssert(m.isScalar)
        XCTAssertEqual(m.scalar, 1 as Element)
    }

    func testIsNotScalar() {
        let m = [[1, 2, 3]] as {{ Matrix.name }}<Element>
        XCTAssertFalse(m.isScalar)
        XCTAssertNil(m.scalar)
    }
}
// sourcery:end

{% endfor %}
